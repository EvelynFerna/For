//digitar uma nota entre 0 e 10, se for um numero diferente vai dar erro
#include <stdio.h>
int main (){
    int nota;
    for(;;) {
    
    printf("Digite uma nota de 0 a 10: \n");
    scanf("%d", &nota);
    
    if(nota <=10) {
    break;
    
    }else{
    
    printf("Valor invalido. \n");
    }
}
printf("VocÃª digitou uma nota valida. \n");
    
    return 0;

}
